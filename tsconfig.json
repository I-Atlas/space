{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "*": ["/*"],
      "components/*": ["components/*"],
      "layouts/*": ["layouts/*"],
      "styles/*": ["styles/*"],
      "data/*": ["data/*"],
      "pages/*": ["pages/*"],
      "hooks/*": ["hooks/*"],
      "public/*": ["public/*"],
      "utils/*": ["utils/*"],
      "services/*": ["services/*"],
      "types/*": ["types/*"],
      "config/*": ["config/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
